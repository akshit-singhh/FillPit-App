<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Circle Indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/statusCircle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/status_pending_circle" />

        <View
            android:id="@+id/statusLine"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/status_pending_line" />
    </LinearLayout>

    <!-- Status Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/statusNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/statusTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-10-26 10:00"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
</LinearLayout>
