<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="100%"
                android:startColor="#89E5FF"
                android:endColor="#5468FF"
                android:centerColor="#89E5FF"
                android:centerX="100%"
                android:centerY="0%" />
            <corners android:radius="4dp" />
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>

    <!-- Shadow Effect (Simulated) -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="4dp" />
            <!-- Apply Shadow via Elevation -->
        </shape>
    </item>
</layer-list>
